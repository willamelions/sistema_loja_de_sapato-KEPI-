<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Enterprise Inventory Manager</title>
    <!-- √çcones -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <style>
        /* --- VARI√ÅVEIS DE DESIGN ENTERPRISE --- */
        :root {
            --bg-dark: #0f1218;         /* Fundo Principal */
            --bg-panel: #1a1f26;        /* Fundo dos Pain√©is */
            --border-color: #2d3748;    /* Bordas Sutis */
            --gold-primary: #C19A3F;    /* Dourado Fosco Premium */
            --gold-light: #e0c27b;      /* Dourado Claro */
            --text-main: #e2e8f0;       /* Texto Principal */
            --text-muted: #94a3b8;      /* Texto Secund√°rio */
            --danger: #ef4444;          /* Vermelho Alerta */
            --success: #10b981;         /* Verde Sucesso */
        }

        * { box-sizing: border-box; font-family: 'Segoe UI', 'Roboto', sans-serif; outline: none; }
        
        body {
            background-color: var(--bg-dark);
            color: var(--text-main);
            margin: 0; padding: 0;
            height: 100vh;
            display: flex;
            background-image: radial-gradient(circle at 10% 20%, rgba(193, 154, 63, 0.03) 0%, transparent 20%);
        }

        /* SIDEBAR (Navega√ß√£o Lateral) */
        .sidebar {
            width: 80px;
            background: var(--bg-panel);
            border-right: 1px solid var(--border-color);
            display: flex; flex-direction: column; align-items: center;
            padding-top: 20px;
            transition: 0.3s;
            z-index: 100;
        }
        .sidebar:hover { width: 200px; }
        .sidebar:hover .menu-text { display: inline; opacity: 1; }
        
        .menu-item {
            color: var(--text-muted);
            padding: 15px;
            width: 100%;
            display: flex; align-items: center;
            cursor: pointer;
            text-decoration: none;
            transition: 0.2s;
            white-space: nowrap;
        }
        .menu-item:hover, .menu-item.active { background: rgba(193, 154, 63, 0.1); color: var(--gold-primary); border-left: 3px solid var(--gold-primary); }
        .menu-icon { font-size: 1.2rem; min-width: 50px; text-align: center; }
        .menu-text { display: none; opacity: 0; transition: 0.2s; margin-left: 10px; font-weight: 500; }

        /* CONTE√öDO PRINCIPAL */
        .main-content { flex: 1; padding: 30px; overflow-y: auto; display: flex; flex-direction: column; }

        /* HEADER & BREADCRUMBS */
        .top-bar { display: flex; justify-content: space-between; align-items: center; margin-bottom: 25px; }
        .breadcrumbs { font-size: 0.85rem; color: var(--text-muted); }
        .breadcrumbs span { color: var(--gold-primary); }
        .page-title { font-size: 1.8rem; font-weight: 300; margin: 5px 0; color: #fff; letter-spacing: 1px; }
        .page-title b { color: var(--gold-primary); font-weight: 700; }

        /* KPI CARDS (Indicadores) */
        .kpi-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; margin-bottom: 30px; }
        .kpi-card {
            background: linear-gradient(145deg, #1e2530 0%, #161b22 100%);
            border: 1px solid var(--border-color);
            border-radius: 8px; padding: 20px;
            position: relative; overflow: hidden;
            box-shadow: 0 4px 6px rgba(0,0,0,0.2);
        }
        .kpi-card::before { content: ''; position: absolute; top: 0; left: 0; width: 4px; height: 100%; background: var(--gold-primary); }
        .kpi-label { font-size: 0.8rem; color: var(--text-muted); text-transform: uppercase; letter-spacing: 1px; }
        .kpi-value { font-size: 1.8rem; font-weight: bold; margin-top: 5px; color: #fff; }
        .kpi-sub { font-size: 0.75rem; color: #666; margin-top: 5px; }

        /* √ÅREA DE CONTROLE (Tabs e Filtros) */
        .control-panel { background: var(--bg-panel); border: 1px solid var(--border-color); border-radius: 8px; padding: 20px; flex: 1; display: flex; flex-direction: column; }
        
        .tabs { display: flex; border-bottom: 1px solid var(--border-color); margin-bottom: 20px; }
        .tab-btn {
            background: none; border: none; color: var(--text-muted);
            padding: 10px 20px; cursor: pointer; font-size: 1rem; position: relative;
        }
        .tab-btn.active { color: var(--gold-primary); font-weight: bold; }
        .tab-btn.active::after {
            content: ''; position: absolute; bottom: -1px; left: 0; width: 100%; height: 2px; background: var(--gold-primary);
        }

        /* FILTROS E A√á√ïES */
        .actions-bar { display: flex; justify-content: space-between; margin-bottom: 20px; }
        .search-box { position: relative; width: 300px; }
        .search-box input {
            width: 100%; background: #0f1218; border: 1px solid var(--border-color); color: #fff;
            padding: 10px 10px 10px 35px; border-radius: 4px;
        }
        .search-box i { position: absolute; left: 10px; top: 12px; color: #666; }
        
        .btn-gold {
            background: linear-gradient(to bottom, #C19A3F, #a37f2e);
            color: #000; font-weight: bold; border: none; padding: 10px 20px;
            border-radius: 4px; cursor: pointer; transition: 0.2s; display: flex; align-items: center; gap: 8px;
        }
        .btn-gold:hover { filter: brightness(1.1); box-shadow: 0 0 10px rgba(193, 154, 63, 0.3); }

        /* DATA GRID (Tabela) */
        .table-container { flex: 1; overflow-y: auto; border: 1px solid var(--border-color); border-radius: 4px; }
        table { width: 100%; border-collapse: collapse; }
        th { background: #11141a; color: var(--gold-primary); padding: 12px; text-align: left; font-size: 0.85rem; text-transform: uppercase; position: sticky; top: 0; z-index: 10; }
        td { padding: 12px; border-bottom: 1px solid var(--border-color); color: var(--text-muted); font-size: 0.9rem; }
        tr:hover { background: rgba(255, 255, 255, 0.03); }

        .status-badge { padding: 4px 8px; border-radius: 12px; font-size: 0.75rem; font-weight: bold; }
        .status-ok { background: rgba(16, 185, 129, 0.2); color: #10b981; }
        .status-low { background: rgba(239, 68, 68, 0.2); color: #ef4444; }

        /* MODAL DE CADASTRO */
        .modal-overlay {
            position: fixed; top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(0,0,0,0.8); z-index: 999; display: none;
            justify-content: center; align-items: center;
        }
        .modal {
            background: var(--bg-panel); border: 1px solid var(--gold-primary);
            width: 700px; max-width: 90%; padding: 30px; border-radius: 8px;
            box-shadow: 0 0 30px rgba(0,0,0,0.8); position: relative;
        }
        .form-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 15px; }
        .form-group { margin-bottom: 15px; }
        .form-group label { display: block; font-size: 0.8rem; color: var(--text-muted); margin-bottom: 5px; }
        .form-group input, .form-group select {
            width: 100%; background: #0f1218; border: 1px solid var(--border-color);
            color: #fff; padding: 10px; border-radius: 4px;
        }
        .form-group input:focus { border-color: var(--gold-primary); }

        .close-modal { position: absolute; top: 15px; right: 15px; color: #fff; cursor: pointer; font-size: 1.5rem; }

        /* Utility */
        .hidden { display: none; }
    </style>
</head>
<body>

    <!-- SIDEBAR -->
    <aside class="sidebar">
        <div class="menu-item" onclick="window.location='/'">
            <i class="fas fa-chart-pie menu-icon"></i> <span class="menu-text">Dashboard</span>
        </div>
        <div class="menu-item active">
            <i class="fas fa-boxes menu-icon"></i> <span class="menu-text">Estoque</span>
        </div>
        <div class="menu-item" onclick="window.location='/pdv-pro'">
            <i class="fas fa-cash-register menu-icon"></i> <span class="menu-text">Vendas PDV</span>
        </div>
        <div class="menu-item" onclick="window.location='/financeiro'">
            <i class="fas fa-file-invoice-dollar menu-icon"></i> <span class="menu-text">Financeiro</span>
        </div>
    </aside>

    <!-- CONTE√öDO -->
    <main class="main-content">
        
        <!-- HEADER -->
        <div class="top-bar">
            <div>
                <div class="breadcrumbs">SISTEMA > GEST√ÉO > <span>ESTOQUE</span></div>
                <h1 class="page-title">Controle de <b>Invent√°rio</b></h1>
            </div>
            <div style="text-align: right; font-size: 0.9rem; color: var(--text-muted);">
                <i class="far fa-clock"></i> √öltima atualiza√ß√£o: <span id="clock">--:--</span>
            </div>
        </div>

        <!-- KPI CARDS -->
        <div class="kpi-grid">
            <div class="kpi-card">
                <div class="kpi-label">SKUs Ativos</div>
                <div class="kpi-value"><%= kpi.total_skus || 0 %></div>
                <div class="kpi-sub">Produtos cadastrados</div>
            </div>
            <div class="kpi-card" style="border-color: #ef4444;">
                <div class="kpi-label" style="color:#ef4444">Estoque Cr√≠tico</div>
                <div class="kpi-value" style="color:#ef4444"><%= kpi.alerta_baixo || 0 %></div>
                <div class="kpi-sub">Abaixo do m√≠nimo</div>
            </div>
            <div class="kpi-card">
                <div class="kpi-label">Valuation (Custo)</div>
                <div class="kpi-value">R$ <%= parseFloat(kpi.valor_estoque || 0).toLocaleString('pt-BR') %></div>
                <div class="kpi-sub">Capital imobilizado</div>
            </div>
            <div class="kpi-card">
                <div class="kpi-label">Total de Itens</div>
                <div class="kpi-value"><%= kpi.total_itens || 0 %></div>
                <div class="kpi-sub">Unidades f√≠sicas</div>
            </div>
        </div>

        <!-- PAINEL DE CONTROLE -->
        <div class="control-panel">
            
            <div class="tabs">
                <button class="tab-btn active" onclick="switchTab('visao-geral')">Vis√£o Geral</button>
                <button class="tab-btn" onclick="alert('Feature futura: Hist√≥rico de Movimenta√ß√µes (Entradas/Sa√≠das)')">Auditoria & Logs</button>
            </div>

            <!-- TAB: VIS√ÉO GERAL -->
            <div id="tab-visao-geral">
                
                <div class="actions-bar">
                    <form action="/produtos" method="GET" class="search-box">
                        <i class="fas fa-search"></i>
                        <input type="text" name="busca" placeholder="Buscar por Nome ou SKU..." value="<%= termoBusca %>">
                    </form>
                    
                    <div style="display:flex; gap:10px;">
                        <button class="btn-gold" onclick="abrirModalCadastro()">
                            <i class="fas fa-plus"></i> Novo Produto (F2)
                        </button>
                        <button class="btn-gold" style="background:#333; color:#fff;" onclick="window.print()">
                            <i class="fas fa-print"></i> Relat√≥rio
                        </button>
                    </div>
                </div>

                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>SKU</th>
                                <th>Produto</th>
                                <th>Categoria</th>
                                <th>Local</th>
                                <th>Custo</th>
                                <th>Venda</th>
                                <th>Estoque</th>
                                <th>Status</th>
                                <th>A√ß√µes</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(lista.length > 0) { %>
                                <% lista.forEach(p => { %>
                                    <tr>
                                        <td style="font-family: monospace; color: var(--gold-light);"><%= p.sku || '---' %></td>
                                        <td style="font-weight: 500; color: #fff;"><%= p.nome %> <span style="font-size:0.8rem; color:#666">(Tam: <%= p.tamanho %>)</span></td>
                                        <td><%= p.categoria_nome || '-' %></td>
                                        <td><%= p.localizacao || '-' %></td>
                                        <td>R$ <%= parseFloat(p.preco_custo).toFixed(2) %></td>
                                        <td style="color: var(--gold-primary)">R$ <%= parseFloat(p.preco_venda).toFixed(2) %></td>
                                        <td style="font-weight: bold;"><%= p.estoque %></td>
                                        <td>
                                            <% if(p.estoque <= p.estoque_minimo) { %>
                                                <span class="status-badge status-low">BAIXO</span>
                                            <% } else { %>
                                                <span class="status-badge status-ok">NORMAL</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <i class="fas fa-ellipsis-v" style="cursor: pointer; padding: 5px;"></i>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="9" style="text-align:center; padding: 30px;">Nenhum produto encontrado.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>

    </main>

    <!-- MODAL DE CADASTRO ENTERPRISE -->
    <div class="modal-overlay" id="modalCadastro">
        <div class="modal">
            <span class="close-modal" onclick="fecharModalCadastro()">&times;</span>
            <h2 style="color:var(--gold-primary); margin-top:0; border-bottom:1px solid #333; padding-bottom:10px;">
                <i class="fas fa-box"></i> Cadastro de Produto
            </h2>
            
            <form action="/salvar-produto" method="POST">
                <div class="form-grid">
                    <div class="form-group" style="grid-column: span 2;">
                        <label>Nome do Produto *</label>
                        <input type="text" name="nome" required placeholder="Ex: Sapato Social Oxford Preto">
                    </div>
                    
                    <div class="form-group">
                        <label>SKU (C√≥digo Interno)</label>
                        <input type="text" name="sku" placeholder="GERADO AUTO se vazio">
                    </div>
                    
                    <div class="form-group">
                        <label>Categoria</label>
                        <select name="categoria">
                            <% categorias.forEach(c => { %>
                                <option value="<%= c.id %>"><%= c.nome %></option>
                            <% }) %>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Tamanho (Grade)</label>
                        <input type="number" name="tamanho" required>
                    </div>
                    
                    <div class="form-group">
                        <label>Estoque Inicial *</label>
                        <input type="number" name="estoque" required>
                    </div>

                    <div class="form-group">
                        <label>Pre√ßo Custo (R$)</label>
                        <input type="number" step="0.01" name="custo" required>
                    </div>
                    
                    <div class="form-group">
                        <label>Pre√ßo Venda (R$)</label>
                        <input type="number" step="0.01" name="venda" required>
                    </div>

                    <div class="form-group">
                        <label>Fornecedor</label>
                        <input type="text" name="fornecedor">
                    </div>

                    <div class="form-group">
                        <label>Estoque M√≠nimo (Alerta)</label>
                        <input type="number" name="minimo" value="5">
                    </div>

                    <div class="form-group">
                        <label>Localiza√ß√£o (Prateleira)</label>
                        <input type="text" name="local" placeholder="Ex: A1-05">
                    </div>
                </div>

                <div style="text-align: right; margin-top: 20px;">
                    <button type="button" onclick="fecharModalCadastro()" style="background:transparent; border:1px solid #666; color:#fff; padding:10px 20px; border-radius:4px; cursor:pointer; margin-right:10px;">Cancelar</button>
                    <button type="submit" class="btn-gold">üíæ Salvar & Auditar</button>
                </div>
            </form>
        </div>
    </div>

    <!-- SCRIPTS DE UX -->
    <script>
        // Rel√≥gio
        setInterval(() => {
            const now = new Date();
            document.getElementById('clock').innerText = now.toLocaleTimeString();
        }, 1000);

        // Modal Logic
        const modal = document.getElementById('modalCadastro');
        function abrirModalCadastro() {
            modal.style.display = 'flex';
        }
        function fecharModalCadastro() {
            modal.style.display = 'none';
        }

        // Atalho F2
        document.addEventListener('keydown', (e) => {
            if(e.key === 'F2') {
                e.preventDefault();
                abrirModalCadastro();
            }
            if(e.key === 'Escape') fecharModalCadastro();
        });

        // Simples troca de abas (Visual)
        function switchTab(tabId) {
            document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
            event.target.classList.add('active');
        }
    </script>
</body>
</html>