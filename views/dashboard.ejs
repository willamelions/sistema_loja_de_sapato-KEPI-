<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Dashboard Executivo - Sistema Loja</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        /* --- CONFIGURA√á√ïES VISUAIS (CORRIGIDAS) --- */
        :root {
            --bg-dark: #0f1218;
            --bg-card: #1a1f26;  /* Cor de fundo s√≥lida para o menu */
            --gold: #C19A3F;
            --text-main: #e2e8f0;
            --text-muted: #94a3b8;
            --danger: #ef4444;
            --success: #10b981;
        }

        * { box-sizing: border-box; font-family: 'Segoe UI', sans-serif; outline: none; }
        
        body {
            background-color: var(--bg-dark);
            color: var(--text-main);
            margin: 0; padding: 0;
            display: flex; /* IMPORTANTE: Mant√©m Menu e Conte√∫do lado a lado */
            height: 100vh;
            overflow: hidden; /* Impede rolagem dupla */
        }

        /* --- MENU LATERAL (SIDEBAR) --- */
        aside {
            width: 80px; /* Largura inicial fechada */
            background-color: var(--bg-card); /* Fundo S√ìLIDO (Corre√ß√£o do transparente) */
            border-right: 1px solid #333;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 20px;
            transition: width 0.3s ease;
            flex-shrink: 0; /* IMPEDE que o menu seja esmagado */
            z-index: 1000;
            height: 100vh;
        }

        /* Expande ao passar o mouse */
        aside:hover {
            width: 240px;
            align-items: flex-start;
        }

        .menu-item {
            width: 100%;
            padding: 15px 20px;
            color: var(--text-muted);
            text-decoration: none;
            display: flex;
            align-items: center;
            cursor: pointer;
            transition: 0.2s;
            white-space: nowrap; 
            overflow: hidden;
        }

        .menu-item:hover, .menu-item.active {
            background-color: rgba(193, 154, 63, 0.1);
            color: var(--gold);
            border-left: 4px solid var(--gold);
        }

        .menu-icon {
            font-size: 1.4rem;
            min-width: 40px;
            text-align: center;
            display: flex; justify-content: center;
        }

        .menu-text {
            margin-left: 15px;
            font-weight: 500;
            opacity: 0;
            transition: opacity 0.2s;
        }

        aside:hover .menu-text { opacity: 1; }

        /* --- CONTE√öDO PRINCIPAL (DIREITA) --- */
        main {
            flex: 1; /* Ocupa todo o espa√ßo restante */
            padding: 30px;
            overflow-y: auto; /* Permite rolar apenas o conte√∫do */
            display: flex;
            flex-direction: column;
            gap: 25px;
            background-color: var(--bg-dark);
            position: relative;
        }

        /* Header */
        .header-dash {
            display: flex; justify-content: space-between; align-items: center;
            padding-bottom: 10px;
        }

        /* KPI CARDS */
        .kpi-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 20px;
        }

        .kpi-card {
            background: #161a21;
            border: 1px solid #2d3748;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.3);
        }

        .kpi-title { font-size: 0.85rem; color: #888; text-transform: uppercase; margin-bottom: 5px; }
        .kpi-val { font-size: 2rem; font-weight: bold; color: #fff; }
        
        /* GR√ÅFICOS */
        .charts-row {
            display: grid;
            grid-template-columns: 2fr 1fr; /* Esquerda maior que direita */
            gap: 20px;
        }

        .chart-box {
            background: #161a21;
            border: 1px solid #2d3748;
            border-radius: 8px;
            padding: 15px;
            min-height: 350px; /* Altura m√≠nima garantida */
        }
        
        /* Responsividade para telas menores */
        @media (max-width: 1000px) {
            .charts-row { grid-template-columns: 1fr; }
        }

        /* TABELAS */
        table { width: 100%; border-collapse: collapse; margin-top: 10px; }
        th { text-align: left; color: #666; font-size: 0.8rem; padding: 10px; border-bottom: 1px solid #333; }
        td { padding: 10px; border-bottom: 1px solid #222; font-size: 0.9rem; }
    </style>
</head>
<body>

    <!-- MENU LATERAL (CORRIGIDO) -->
    <aside>
        <div style="margin-bottom: 20px; padding: 20px 0; width: 100%; text-align: center;">
            <i class="fas fa-shoe-prints" style="color: var(--gold); font-size: 1.5rem;"></i>
        </div>

        <a href="/" class="menu-item active">
            <div class="menu-icon"><i class="fas fa-chart-line"></i></div>
            <span class="menu-text">Vis√£o Geral</span>
        </a>
        <a href="/pdv-pro" class="menu-item">
            <div class="menu-icon"><i class="fas fa-cash-register"></i></div>
            <span class="menu-text">PDV (Vendas)</span>
        </a>
        <a href="/produtos" class="menu-item">
            <div class="menu-icon"><i class="fas fa-boxes"></i></div>
            <span class="menu-text">Estoque</span>
        </a>
        <a href="/financeiro" class="menu-item">
            <div class="menu-icon"><i class="fas fa-wallet"></i></div>
            <span class="menu-text">Financeiro</span>
        </a>
    </aside>

    <!-- CONTE√öDO PRINCIPAL -->
    <main>
        <div class="header-dash">
            <div>
                <h1 style="margin:0; font-weight:300;">Painel <b style="color:var(--gold)">Executivo</b></h1>
                <small style="color:#666">Performance geral da loja</small>
            </div>
            <div style="background:#222; padding:5px 15px; border-radius:20px; font-size:0.8rem; color:var(--gold); border:1px solid #333;">
                <%= new Date().toLocaleDateString('pt-BR') %>
            </div>
        </div>

        <!-- KPIs -->
        <div class="kpi-container">
            <div class="kpi-card">
                <div class="kpi-title">Vendas Hoje</div>
                <div class="kpi-val">R$ <%= parseFloat(kpi.vendas_hoje || 0).toFixed(2) %></div>
            </div>
            <div class="kpi-card">
                <div class="kpi-title">Acumulado M√™s</div>
                <div class="kpi-val">R$ <%= parseFloat(kpi.vendas_mes || 0).toFixed(2) %></div>
            </div>
            <div class="kpi-card">
                <div class="kpi-title">Ticket M√©dio</div>
                <div class="kpi-val">R$ <%= parseFloat(kpi.ticket_medio || 0).toFixed(2) %></div>
            </div>
            <div class="kpi-card" style="border-color: #ef4444;">
                <div class="kpi-title" style="color: #ef4444;">Estoque Cr√≠tico</div>
                <div class="kpi-val" style="color: #ef4444;"><%= kpi.estoque_critico || 0 %></div>
            </div>
        </div>

        <!-- GR√ÅFICOS -->
        <div class="charts-row">
            <div class="chart-box">
                <h3 style="margin-top:0; font-size:1rem; color:#aaa;">üìà Evolu√ß√£o de Vendas (6 Meses)</h3>
                <div style="height: 300px; width: 100%;">
                    <canvas id="chartVendas"></canvas>
                </div>
            </div>
            <div class="chart-box">
                <h3 style="margin-top:0; font-size:1rem; color:#aaa;">üèÜ Top Produtos</h3>
                <div style="height: 300px; width: 100%;">
                    <canvas id="chartTop"></canvas>
                </div>
            </div>
        </div>

        <!-- LISTAS -->
        <div class="charts-row" style="height: auto;">
            <div class="chart-box">
                <h3 style="margin-top:0; font-size:1rem; color:var(--gold);">‚è± √öltimas Vendas</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Hora</th>
                            <th>Vendedor</th>
                            <th>Valor</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(ultimas.length > 0) { %>
                            <% ultimas.forEach(v => { %>
                            <tr>
                                <td><%= v.data_venda ? new Date(v.data_venda).toLocaleTimeString().slice(0,5) : '--:--' %></td>
                                <td><%= v.vendedor %></td>
                                <td style="color:#fff; font-weight:bold;">R$ <%= parseFloat(v.total || 0).toFixed(2) %></td>
                            </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="3" style="text-align:center">Nenhuma venda recente</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            
            <div class="chart-box">
                <h3 style="margin-top:0; font-size:1rem; color:#ef4444;">‚ö† Reposi√ß√£o Urgente</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Produto</th>
                            <th>Qtd</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(alertas.length > 0) { %>
                            <% alertas.forEach(p => { %>
                            <tr>
                                <td><%= p.nome %></td>
                                <td style="color:#ef4444; font-weight:bold;"><%= p.estoque %></td>
                            </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="2" style="text-align:center">Estoque Saud√°vel ‚úÖ</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

    </main>

    <!-- SCRIPT DOS GR√ÅFICOS -->
    <script>
        // Dados vindos do Backend (Node.js)
        // Se vier vazio, coloca array padr√£o para n√£o quebrar
        const dadosMeses = <%- JSON.stringify(charts.meses) %> || [];
        const dadosVendas = <%- JSON.stringify(charts.vendas) %> || [];
        const dadosProdNomes = <%- JSON.stringify(charts.prodNomes) %> || [];
        const dadosProdQtd = <%- JSON.stringify(charts.prodQtd) %> || [];

        // GR√ÅFICO 1: EVOLU√á√ÉO (LINHA)
        const ctxVendas = document.getElementById('chartVendas').getContext('2d');
        
        // Dados fict√≠cios caso esteja vazio, s√≥ pra mostrar o visual
        const labelsGrafico = dadosMeses.length > 0 ? dadosMeses : ['Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun'];
        const valuesGrafico = dadosVendas.length > 0 ? dadosVendas : [0, 0, 0, 0, 0, 0];

        new Chart(ctxVendas, {
            type: 'line',
            data: {
                labels: labelsGrafico,
                datasets: [{
                    label: 'Vendas (R$)',
                    data: valuesGrafico,
                    borderColor: '#C19A3F',
                    backgroundColor: 'rgba(193, 154, 63, 0.1)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    x: { grid: { display: false }, ticks: { color: '#666' } },
                    y: { grid: { color: '#333' }, ticks: { color: '#666' } }
                }
            }
        });

        // GR√ÅFICO 2: TOP PRODUTOS (BARRA)
        const ctxTop = document.getElementById('chartTop').getContext('2d');
        
        const labelsTop = dadosProdNomes.length > 0 ? dadosProdNomes : ['Sem dados'];
        const valuesTop = dadosProdQtd.length > 0 ? dadosProdQtd : [0];

        new Chart(ctxTop, {
            type: 'bar',
            data: {
                labels: labelsTop,
                datasets: [{
                    label: 'Qtd',
                    data: valuesTop,
                    backgroundColor: ['#C19A3F', '#a37f2e', '#856622', '#664d1a', '#4a3610'],
                    borderRadius: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                indexAxis: 'y',
                plugins: { legend: { display: false } },
                scales: {
                    x: { grid: { color: '#333' }, ticks: { color: '#666' } },
                    y: { grid: { display: false }, ticks: { color: '#ccc', font: {size: 10} } }
                }
            }
        });
    </script>

</body>
</html>